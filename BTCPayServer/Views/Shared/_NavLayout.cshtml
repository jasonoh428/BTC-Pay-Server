@{
	Layout = "/Views/Shared/_Layout.cshtml";
}


<section>
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading">@ViewData["MainTitle"]</h2>
				<hr class="primary">
			</div>
		</div>

		<div>
			<div class="row">
				<div class="col-md-3">
					@await Html.PartialAsync("_Nav")
				</div>
				<div class="col-md-9">
					@RenderBody()
				</div>
			</div>
		</div>
	</div>
</section>
@section Scripts {
	@RenderSection("Scripts", required: false)
}

